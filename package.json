{
  "name": "16bitfit",
  "version": "1.0.0",
  "description": "GameBoy-style fitness tracking app",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build": "expo build",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:web": "expo build:web",
    "eject": "expo eject",
    "analyze": "node scripts/bundle-analyzer.js",
    "optimize": "npm run analyze && npm run lint",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "precommit": "npm run lint",
    "postinstall": "patch-package",
    "db:deploy": "node scripts/deploy-supabase-schema.js",
    "db:test": "node scripts/deploy-supabase-schema.js --test",
    "test:supabase": "node scripts/test-supabase-connection.js",
    "phaser:dev": "cd phaser-game && npm run dev",
    "phaser:build": "cd phaser-game && npm run build",
    "phaser:install": "cd phaser-game && npm install",
    "phaser:watch": "cd phaser-game && npm run watch",
    "phaser:build:ios": "cd phaser-game && npm run build && cp -r dist ios/phaser-game-dist",
    "phaser:build:android": "cd phaser-game && npm run build && cp -r dist android/app/src/main/assets/phaser-game-dist",
    "assets:bundle": "node scripts/bundle-phaser-assets.js",
    "assets:generate": "node scripts/generate-all-placeholder-assets.js",
    "assets:fix": "node scripts/fix-empty-assets.js",
    "phaser:setup": "npm run phaser:install && npm run assets:bundle && npm run phaser:build"
  },
  "dependencies": {
    "@expo-google-fonts/press-start-2p": "^0.4.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/netinfo": "9.3.10",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@supabase/supabase-js": "^2.52.0",
    "expo": "~49.0.0",
    "expo-application": "~5.3.0",
    "expo-asset": "~8.10.1",
    "expo-av": "~13.4.1",
    "expo-blur": "~12.4.1",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0",
    "expo-file-system": "~15.4.5",
    "expo-font": "~11.4.0",
    "expo-haptics": "~12.4.0",
    "expo-image": "~1.3.2",
    "expo-linear-gradient": "~12.3.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "matter-js": "^0.20.0",
    "phaser": "^3.70.0",
    "posthog-react-native": "^4.3.0",
    "react": "18.2.0",
    "react-native": "0.72.10",
    "react-native-dotenv": "^3.4.11",
    "react-native-game-engine": "^1.2.0",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-health": "^1.19.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-webview": "13.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/react": "~18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.44.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "fs-extra": "^11.3.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.0",
    "react-native-fs": "^2.20.0",
    "sharp": "^0.32.6",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "eslintConfig": {
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react-native/no-unused-styles": "error",
      "react-native/split-platform-components": "error",
      "react-native/no-inline-styles": "warn",
      "react-native/no-color-literals": "warn",
      "react-native/no-raw-text": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "env": {
      "react-native/react-native": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "private": true,
  "keywords": [
    "fitness",
    "gameboy",
    "react-native",
    "expo",
    "16bit",
    "health",
    "gamification"
  ],
  "author": "16BitFit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/16bitfit/16bitfit-app.git"
  },
  "bugs": {
    "url": "https://github.com/16bitfit/16bitfit-app/issues"
  },
  "homepage": "https://16bitfit.com"
}
